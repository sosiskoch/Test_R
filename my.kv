<Screen0>:
    BoxLayout:
        padding: "8sp"
        orientation: "vertical"
        MDLabel:
            text: 'Сколько вам лет?'
        MDTextField:
            id: age_field
            required: True
            input_filter: "int"
            mode: "rectangle"
            hint_text: "Возраст"
            helper_text_mode: "on_error"
        MDRaisedButton:
            text: 'Далее'
            font_size: '40sp'
            size_hint: 0.5, None
            pos_hint: {"center_x": 0.5} 
            on_press:
                root.move_next()

<Screen1>:
    on_enter:
        root.ids.countdown1.start()
    BoxLayout:
        padding: "8sp"
        orientation: "vertical"
        Countdown:
            id: countdown1
            text: '15'
            on_is_done:
                root.ids.btn_next.disabled = False
        MDTextField:
            id: p1_field
            hint_text: "Введите пульс"
            required: True
            input_filter: "int"
            helper_text_mode: "on_error"
            mode: "rectangle"
        MDRaisedButton:
            id: btn_next
            text: 'Далее'
            font_size: '40sp'
            size_hint: 0.5, None
            pos_hint: {"center_x": 0.5} 
            disabled: True
            on_press:
                root.move_next()

<Screen2>:
    BoxLayout:
        padding: "8sp"
        orientation: "vertical"
        MDLabel:
            text: 'Сделайте 30 приседаний за 45 сек.'
        MDRaisedButton:
            text: 'Далее'
            font_size: '40sp'
            size_hint: 0.5, None
            pos_hint: {"center_x": 0.5}
            on_press:
                app.sm.transition.derection = "left"
                app.sm.current = "Screen3"

